<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etDayOfWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Day of the Week"
        android:minHeight="56dp"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:focusable="false"
        android:clickable="true"/>

    <TimePicker
        android:id="@+id/timePickerCourseTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <Spinner
        android:id="@+id/spinnerClassType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:padding="16dp"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinnerDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:padding="16dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etCapacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Capacity"
        android:minHeight="56dp"
        android:padding="16dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etPricePerClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price per Class"
        android:minHeight="56dp"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/etTeacherName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Teacher Name"
        android:minHeight="56dp"
        android:padding="16dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location"
        android:minHeight="56dp"
        android:padding="16dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:minHeight="56dp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:minHeight="56dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnBackToList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:minHeight="56dp"/>
</LinearLayout>
    </ScrollView>
